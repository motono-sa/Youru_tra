<div class="flex flex-col w-4/5 mx-auto mb-10">
  <div class="divider divider-primary my-10">
    <h1>マイページ編集</h1>
  </div>

  <%= form_with model: @user, url: mypage_path, local: true, method: :patch do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <label class="input input-bordered flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="icon-hidden-on-mobile w-4 h-4 opacity-70">
          <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
        </svg>
        <%= f.text_field :name, class: "grow border-none border-0 focus:ring-0", placeholder: "Name" %>
      </label>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <label class="input input-bordered flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="icon-hidden-on-mobile w-4 h-4 opacity-70">
          <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
          <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
        </svg>
        <%= f.email_field :email, class: "grow border-none border-0 focus:ring-0", placeholder: "Email" %>
      </label>
    </div>
  <%= f.submit "更新", class: "mb-5 mx-auto flex flex-col justify-center btn btn-secondary text-base-200" %>
  <% end %>
  <%= link_to "キャンセル", mypage_path, class: "mx-auto flex flex-col justify-center btn btn-outline btn-secondary hover-text-slate-200" %>
</div>