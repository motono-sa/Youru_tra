<div class="flex flex-col w-4/5 mx-auto mb-10">
  <div class="divider divider-primary my-10">
    <h1><%= t('password_resets.edit.title') %></h1>
  </div>

  <%= form_with model: @user, url: password_reset_path(@token), method: :patch do |f| %>
    <%= render 'shared/error_message', object: f.object %>

    <div class="bg-white p-6 rounded-lg shadow-lg text-center mb-5">
      <h3 class="text-lg md:text-base text-center font-semibold"><%= t('helpers.label.email') %></h3>
      <div class="text-base md:text-sm">
        <%= @user.email %>      
      </div>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <label class="input input-bordered flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="icon-hidden-on-mobile w-4 h-4 opacity-70">
          <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password, class: "grow border-none border-0 focus:ring-0", placeholder: "Password" %>
      </label>
    </div>
    <div class="mb-5">
      <%= f.label :password_confirmation, class: "form-label" %>
      <label class="input input-bordered flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="icon-hidden-on-mobile w-4 h-4 opacity-70">
          <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password_confirmation, class: "grow border-none border-0 focus:ring-0", placeholder: "Password confirmation" %>
      </label>
    </div>
    <%= f.submit "リセット", class: "mb-5 mx-auto flex flex-col justify-center btn btn-secondary text-base-200" %>
  <% end %>
</div>