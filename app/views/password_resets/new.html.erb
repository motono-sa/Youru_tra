<div class="flex flex-col w-4/5 mx-auto mb-10">
  <div class="divider divider-primary my-10">
    <h1><%= t('password_resets.new.title') %></h1>
  </div>

  <%= form_with url: password_resets_path do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <label class="input input-bordered flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="icon-hidden-on-mobile w-4 h-4 opacity-70">
          <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
          <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
        </svg>
        <%= f.email_field :email, class: "grow border-none border-0 focus:ring-0", placeholder: "Email" %>
      </label>
    </div>
    <%= f.submit "申請", class: "mb-5 mx-auto flex flex-col justify-center btn btn-secondary text-base-200" %>
  <% end %>
</div>