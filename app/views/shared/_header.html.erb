<header class="bg-customBlue1 flex flex-row justify-between items-center h-20 relative text-white font-gorilla">
  <!-- ロゴ部分 -->
  <div class="ml-4 md:mx-5 hover:text-blue-600 transition duration-300 text-lg">
    <%= link_to "Youるトレ", "/" %>
  </div>

  <!-- リンク -->
  <div class="text-sky-700 flex items-center space-x-3 lg:mx-5">
    <%= link_to '/', class: 'hover:text-blue-600 transition duration-300 hidden lg:flex lg:flex-col px-2' do %>
      <p class="text-sm"><%= t "defaults.home" %></p>
    <% end %>
    <%= link_to '/', data: { turbo: false }, class: 'hover:text-blue-600 transition duration-300 hidden lg:flex lg:flex-col px-2' do %>
      <p class="text-sm"><%= t "defaults.profile" %></p>
    <% end %>
    <%= link_to '/', data: { turbo_method: :delete, turbo_confirm: "ログアウトする？" }, class: 'hover:text-blue-600 transition duration-300 hidden lg:flex lg:flex-col px-2' do %>
      <p class="text-sm"><%= t ".logout" %></p>
    <% end %>
    <!-- サイドバーメニュー -->

    <div class="drawer drawer-end lg:hidden">
      <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <label for="my-drawer-4" class="drawer-button btn btn-ghost md:mx-5">
          <i class="fas fa-bars fa-2x"></i>
        </label>
      </div>
      <div class="drawer-side z-10">
        <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="bg-customBlue1 dropdown-content z-[1] menu p-4 w-56 min-h-full">
          <li class="hover:rounded-xl mt-4">
            <%= link_to '/', class: 'btn btn-ghost flex items-center mx-2' do %>
              <p class="text-sm"><%= t "defaults.home" %></p>
            <% end %>
          <li class="hover:rounded-xl mt-4">
            <%= link_to '/', data: { turbo: false }, class: 'btn btn-ghost flex items-center mx-2' do %>
              <p class="text-sm"><%= t "defaults.profile" %></p>
            <% end %>
          </li>
          <li class="hover:rounded-xl mt-4">
            <%= link_to '/', data: { turbo_method: :delete, turbo_confirm: "ログアウトするウホ？" }, class: 'btn btn-ghost flex items-center mx-2' do %>
              <p class="text-sm"><%= t ".logout" %></p>
            <% end %>
          </li>
        </ul>
      </details>
    </nav>
  </div>
</header>